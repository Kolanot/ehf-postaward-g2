<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="ehf-t14-base-2.0">
	<assert>
		<scope>NOGOV-T14-R020</scope>
	</assert>
	<test>
		<assert>
			<description>Verify only allowed mime types are provided.</description>
			<success>NOGOV-T14-R020</success>
		</assert>
		<CreditNote xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:CreditNote-2">

			<cbc:a mimeCode="application/pdf" />
			<cbc:a mimeCode="image/gif" />
			<cbc:a mimeCode="image/tiff" />
			<cbc:a mimeCode="image/jpeg" />
			<cbc:a mimeCode="image/png" />
			<cbc:a mimeCode="text/plain" />

		</CreditNote>
	</test>
	<test>
		<assert>
			<description>Trigger warning when mime types not allowed are provided.</description>
			<warning number="2">NOGOV-T14-R020</warning>
		</assert>
		<CreditNote xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:CreditNote-2">

			<cbc:a mimeCode="application/json" />
			<cbc:a mimeCode="text/json" />

		</CreditNote>
	</test>
</testSet>
